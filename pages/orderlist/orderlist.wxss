/* base/orderlist/orderlist.wxss */
.nodata{
  height: 100vh;
  justify-content: center;
}
.f0 {
  font-size: 28rpx;
}

.f1 {
  font-size: 30rpx;
}

.f2 {
  font-size: 24rpx;
}

.f3 {
  font-size: 36rpx;
}
.fixed{
  position: fixed;
  left: 0;
  top: 0;
  width: 750rpx;
}

.order-nav {
  width: 1120rpx;
  height: 88rpx;
  line-height: 84rpx;
  text-align: center;
  margin-bottom: 20rpx;
}


.order-nav .tab{
  width: 160rpx;
}
.order-nav .text{
  padding-bottom: 10rpx;
  border-bottom: 4rpx solid transparent;
}
.order-nav .active{
  color: var(--blue);
  border-bottom-color:var(--blue);
}
.icon-order1,.icon-mes {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
}

.order-item {
  background-color: var(--white);
  margin: 0 0 20rpx 0;
}

.item-head {
  color: #222;
  font-size: 28rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}

.item-head-right {
  color: var(--skin);
}

.order-mark {
  width: 32rpx;
  height: 32rpx;
  line-height: 28rpx;
  color: #0dbdcd;
  font-size: 24rpx;
  border: 1px solid #0dbdcd;
  margin-right: 6rpx;
}

.new-order-picture-box {
  width: 20%;
  text-align: center;
}

.item-body {
  padding: 0 20rpx;
}

.new-order-desc {
  text-align: right;
  line-height: 80rpx;
}

.order-img {
  width: 124rpx;
  height: 124rpx;
}

.order-btn {
  width: 150rpx;
  height: 54rpx;
  line-height: 54rpx;
  border-radius: 26rpx;
  font-size: 26rpx;
  color: #333;
  border: 1px solid #b8b8b8;
  text-align: center;
  margin: 0 0 0 16rpx;
}

.item-foot {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-top: 1px solid #ebebeb;
  height: 86rpx;
  padding: 0 20rpx;
}

.order-paynow {
  color: var(--skin);
  border-color: var(--skin);
}

