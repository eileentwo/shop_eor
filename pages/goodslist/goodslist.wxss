.productquick-footer {
  position: fixed;
  right: 26rpx;
  bottom: 98rpx;
  height: 90rpx;
  color: #fff;
}

.productquick-footer-info-box {
  height: 90rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 12rpx 24rpx 15rpx 32rpx;
  border-top-left-radius: 90rpx;
  border-bottom-left-radius: 90rpx;
  background: rgba(34, 34, 34, 0.75);
}

.productquick-footer-order {
  display: flex;
  /* width: 136rpx; */
  font-size: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  text-align: center;
  border-top-right-radius: 90rpx;
  border-bottom-right-radius: 90rpx;
  background-color:  var(--blue);
  color: #fff;
}

.productquick-footer-pirce-integer {
  font-size: 30rpx;
}

.productquick-footer-num {
  font-size: 20rpx;
}

.nodata {
  height: 1000rpx;
}
.car-footer{
  position: fixed;
  bottom: 98rpx;
  left: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: var(--blue);
  font-size: 28rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
}

.car-footer .buy{
  background-color:  var(--blue);
  color: #fff;
  width: 200rpx;
  text-align: center;
}

