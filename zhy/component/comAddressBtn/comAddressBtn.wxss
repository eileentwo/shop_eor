button::after {
  border: none;
  border-radius: 0;
}

button {
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding: 0;
  box-sizing: border-box;
  text-align: center;
  text-decoration: none;
  border-radius: 0;
  border: none;
  overflow: hidden;
}