/*公众号关注 */
.gz-gzh{display: flex;justify-content: space-between;align-items: center;height: 100rpx;background: #333;padding: 0 20rpx;position: fixed;bottom: 100rpx;width: 710rpx;z-index: 999}
.gz-gzh image{height: 70rpx;width: 70rpx;margin-right:20rpx;}
.gz-gzh .fs-boxs view{display: flex;flex-direction: column;justify-content: center; color: #fff;height: 70rpx;font-size: 24rpx} 
.gz-gzh .fs-boxs view text{display:inline-block;max-width: 450rpx;overflow: hidden;white-space: nowrap;text-overflow: ellipsis} 
.gz-gzh .fs-boxs{display: flex;align-content: center}
.gz-gzh .gz-tjs{color: #3ba6f6}
.gz-gzh .gz-btns{background: #3ba6f6;color: #fff;border-radius: 8rpx;height: 46rpx;width: 140rpx;text-align: center;line-height: 45rpx}
.gz-masks{background: rgba(0, 0, 0, 0.5);display: flex;justify-content: center;align-items: center;height: 100%;width: 100%;position: fixed;top: 0;left: 0;max-width: 100%;z-index: 999}
.gz-masks view image{height: 320rpx;width: 320rpx}
.gz-masks view text{display: block;color: #fff;margin-top: 20rpx}
.gz-masks view{text-align: center}