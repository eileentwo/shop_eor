.banner {
  position: relative;
  width: 750rpx;
  height: 340rpx;
  background: #fff;
}

.banner>swiper, .inner-box {
  width: 100%;
  height: 100%;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.search {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  bottom: 48rpx;
  left: 75rpx;
  width: 600rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 0 0 1px #999;
}

.van-icon-banner {
  width: 30rpx;
  height: 30rpx;
  color: #999;
  margin: 26rpx 20rpx 0 30rpx;
}

.search-txt {
  color: #999;
}
