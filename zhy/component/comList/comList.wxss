}

.now-price .v3 {
  font-size: 24rpx;
  color: #999;
}

.car-btn {
  margin-top: 5rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: var(--btnL);
  text-align: center;
  color: #fff;
  font-size: 36rpx;
}

.car-mask {
  position: fixed;
  z-index: 13;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.car-box {
  position: fixed;
  z-index: 14;
  left: 0;
  bottom: 0;
  width: 100%;
