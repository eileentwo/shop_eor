/* zhy/component/comList.wxss */
@import "../../../app.wxss";
@import '/zhy/resource/css/info.wxss';
@import '/zhy/template/goodsinfo/goodsinfo.wxss';

.find-item {
  background-color: #fff;
  overflow: hidden;
  /* position: relative; */
}

.find-contenta .find-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 30rpx 0 50rpx;
}

.find-contentc .find-list {
  margin: 0;
}

.find-item .find-img {
  width: 375rpx;
  height: 375rpx;
  border-radius: 16rpx;
  margin: 15rpx 0;
}

.find-contenta .find-img {
  width: 186rpx;
  height: 186rpx;
  margin-right: 22rpx;
}

.find-contenta1 .find-img {
  width: 700rpx;
  height: 700rpx;
}

.find-contenta1 .find-list {
  padding-bottom: 20rpx;
}

.find-contentb {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 30rpx;
}

.find-contentb .find-item {
  width: 340rpx;
}

.find-contentb .find-item-big {
  width: 750rpx;
  position: relative;
}

.find-contenta .find-rig {
  width: 550rpx;
  box-sizing: border-box;
  padding: 15rpx 0;
}

.find-contentc .find-rig {
  width: 378rpx;
}

.find-contentb .find-rig {
  padding-bottom: 24rpx;
}

.find-padding {
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: left;
}

.find-contenta .find-padding {
  height: 204rpx;
  padding: 0;
  font-size: 24rpx;
}

.find-contentb .find-padding {
  padding: 0;
}

.find-contentc .find-padding {
  height: 184rpx;
}

.food-name {
  width: 100%;
  overflow: hidden;
  line-height: 1.6;
  font-size: 28rpx;
  white-space: initial;
  padding-bottom: 3rpx;
  box-sizing: content-box;
}

.find-contentc .food-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #363636;
}

.food-desc,
.find-contentc .food-desc {
  font-size: 20rpx;
  color: var(--fontb);
  -webkit-line-clamp: 1;

}


.food-price {
  display: flex;
  align-items: baseline;
  color: var(--skin);
  margin: 8rpx 0;
  font-size: 22rpx;

}

.original-price {
  text-decoration: line-through;
  font-size: 22rpx;
  color: var(--fontc);
  margin-left: 10rpx;
}

.find-contentc .original-price {
  margin-left: 0;
}

.v1 {
  font-size: 20rpx;
}

.v2 {
  font-size: 32rpx;
}

.v3 {
  font-size: 24rpx;
}

.opration-wrap {
  margin-top: 10rpx;
  height: 66rpx;
}


.food-item,
.promotion-item {
  display: flex;
  flex-wrap: wrap;
}

.food-list {
  margin-bottom: 20rpx;
  width: 375rpx;
  overflow: hidden;
}

.food-img {
  display: block;
  width: 375rpx;
  height: 375rpx;
}

.specification-box {
  width: 100%;
  height: 66rpx;
  display: flex;
  align-items: center;
}

.specification-box .v1 {
  /*flex: 1;*/
  color: #999;
}

.icon-car {
  width: 62rpx;
  height: 62rpx;
}

.s-rig {
  position: relative;
}

.s-rig .v2 {
  padding: 0 14rpx;
  position: absolute;
  right: -8rpx;
  top: -6rpx;
  z-index: 1;
  height: 26rpx;
  line-height: 26rpx;
  background: #f84e21;
  color: #fff;
  font-size: 16rpx;
  border-radius: 13rpx;
}

.operation-stock {
  /*flex: 1;*/
  font-size: 26rpx;
  color: #999;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.find-contenta .borderB {
  border-bottom: 1px solid rgba(136, 136, 136, 0.25);
}

.find-contentb .borderR {
  border-right: 1px solid rgba(136, 136, 136, 0.25);
}

.promote-flag {
  width: 74rpx;
  height: 56rpx;
  position: absolute;
  left: 12rpx;
  top: 0;
}

.find-contenta1 .find-itemBo {
  border-bottom: 1px solid rgba(136, 136, 136, 0.25);
}


.goods-info {
  display: flex;
}

.goods-info .v1 {
  width: 400rpx;
  height: 42rpx;
  line-height: 42rpx;
  font-size: 28rpx;
  color: var(--fontb);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.now-price {
  display: flex;
  align-items: baseline;
}

.market-price {
  margin-top: 32rpx;
  font-size: 24rpx;
  color: #aaa;
}

.now-price {
  margin-top: 13rpx;
}

.now-price .v1 {
  font-size: 16rpx;
  color: var(--skin);
}

.now-price .v2 {
  font-size: 24rpx;
