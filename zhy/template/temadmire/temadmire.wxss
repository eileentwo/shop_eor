.admire {
  position: fixed;
  top: 16rpx;
  right: 20rpx;
  z-index: 1001;
  background: #fff;
  padding: 20rpx 40rpx 20rpx 20rpx;
  border-radius: 10rpx;
  letter-spacing: 4rpx;
  box-shadow: 2px 2px 10px #333;
}

.admire::before {
  content: '';
  position: absolute;
  top: -12rpx;
  right: 120rpx;
  width: 24rpx;
  height: 24rpx;
  background: #fff;
  transform: rotate(-45deg);
  z-index: 9;
}

.admire>view {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  color: #444;
}

.admire-dot-min {
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  margin: 0 4rpx;
  background: #222;
  border-radius: 50%;
}

.admire-dot-max {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  margin-top: -4rpx;
  background: #222;
  border-radius: 50%;
  margin: 0 2rpx;
}

.admire-close {
  position: absolute;
  top: 14rpx;
  right: 6rpx;
}
