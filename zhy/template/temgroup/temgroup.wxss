.ui-group {
  position: relative;
  background: #fff;
  margin-bottom: 24rpx;
}

.ui-group.mb0 {
  margin-bottom: 0;
}

.ui-group .ui-list-content {
  padding: 0;
}

.ui-group .ui-list-content .ui-title {
  padding: 30rpx 0;
  margin-right: 24rpx;
}

.ui-group .ui-list-content .ui-content {
  padding: 24rpx;
  margin: 0 24rpx 24rpx 0;
  border-radius: 8rpx;
  background-color: #f6f6f6;
}

.ui-checklabel, .ui-list, .ui-upload-list {
  position: relative;
  color: #444;
  display: block;
  padding: 30rpx 24rpx 30rpx 0;
  margin-left: 24rpx;
  border-bottom: 1px solid #eee;
  word-break: break-all;
}

.ui-list.dn {
  display: none;
}

.ui-list:last-child {
  border-bottom: 0;
}

.ui-group-full .ui-list:last-child {
  border-bottom: 1px solid #eee;
}

.ui-list.ui-list-no {
  border: 0;
  margin: 0;
}

.ui-list-no.active {
  color: #444;
}

.ui-list .ui-right-inputbox {
 
  text-align: right;
}

.ui-list .ui-right-inputbox input {
  line-height: inherit;
  border: none;
  text-align: right;
  width: 100%;
  padding: 0;
  color: #222;
}

.ui-title {
  position: relative;
  line-height: 50rpx;
}

.ui-title .ui-title-bt {
  font-size: 30rpx;
  margin-bottom: -3rpx;
  margin-top: 3rpx;
}

.ui-title .ui-title-bt .ui-r-middle {
  display: inline-block;
  line-height: 45rpx;
  vertical-align: top;
}

.ui-content {
  color: #999;
  line-height: 40rpx;
  margin-top: 10rpx;
}

.ui-content-left {
  display: block;
  float: left;
  width: 60rpx;
  height: 150rpx;
  padding-top: 65rpx;
}

.img-paytype_offline {
  display: inline-block;
  width: 48rpx;
  height: 44rpx;
  margin: 0 29rpx;
}
.ui-group-rt {
  padding: 30rpx 24rpx 30rpx 0;
  box-sizing: border-box;
}
.product-class-right-head-arrow {
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border: 2px solid #ccc;
  border-width: 2px 2px 0 0;
  border-radius: 4rpx;
  transform: rotate(45deg) translateY(2rpx);
}