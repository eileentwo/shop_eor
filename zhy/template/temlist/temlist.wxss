.banner-box {
  position: relative;
  z-index: 22;
}

.nav {
  position: relative;
  display: flex;
  flex-direction: row;
  width: 750rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  box-shadow: 0 -1px 1px #ccc inset;
  z-index: 26;
}

.nav-left {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.nav-left-item {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
}

.choose {
  position: relative;
  color: var(--tab);
}

.active-line {
    position: absolute;
    bottom: 0;
    left: 37rpx;
    width: 300rpx;
    height: 4rpx;
    background-color: var(--tab);
    border-radius: 2rpx;
}