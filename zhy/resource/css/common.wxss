page{ padding-bottom: 98rpx; background: #f8f8f8}
.swiper750{height: 750rpx;}
.swiper750 image{ display: block; width: 100%; height: 750rpx; box-sizing: border-box;}
.dt-somenum{ position: absolute; z-index: 1; width: 100%; height: 52rpx; display: flex; align-items: center; background: rgba(0,0,0,0.6); color: var(--white)}
.dt-somenum .v1{ margin-left:20rpx; flex: 1}
.dt-somenum .v1 text{ font-weight: 600}
.dt-somenum .v2 .v3,.dt-somenum .v2 .v4{ padding: 0 10rpx; height: 36rpx; line-height: 36rpx;}
.dt-somenum .v2 .v3{ margin-right: 20rpx;}
.dt-somenum .v2 .v4{ margin:0 20rpx}
.dt-price{ width: 100%; height: 100rpx; background: linear-gradient(to right,#FE433F,#FF8044); color: var(--white)}
.dtpl-lef{ display: flex; }
.dtp-lef{ padding-left:30rpx; flex: 1; box-sizing: border-box;align-items:baseline}
.dtpl-lef{ align-items: baseline;}
.dtpl-lef .v1{ font-size: 22rpx}
.dtpl-lef .v2{ font-size: 40rpx}
.dtpl-lef .v3{ font-size: 22rpx}
.dtpl-lef .v4{ font-size: 22rpx}
.dtpl-rig{ margin-left:10rpx;}
.dtpl-rig .v1{ font-size: 22rpx; text-decoration: line-through}
.dtpl-rig .v2{ font-size: 22rpx;}
.dtp-rig{ margin-right: 30rpx}
.dt-cont{ padding:1rpx 0 100rpx 0;}
.ld-bor-bg{ margin:20rpx 0 0 20rpx; padding:20rpx; width:710rpx; background: rgba(255,255,255,0.8); border-radius: 10rpx; box-sizing: border-box;}
.ldt-tit{ font-size: 32rpx; font-weight: 600}
.f-img-txt{margin:10rpx 0; display: flex; align-items: center;}
.f-img-txt .img1{ width: 30rpx; height: 34rpx;}
.f-img-txt .img2{ width: 30rpx; height: 34rpx;}
.f-img-txt .img3{ width: 30rpx; height: 34rpx;}
.f-img-txt .v1{ margin-left:13rpx; flex: 1; padding-right: 30rpx; box-sizing: border-box}
.ld-link{ display: flex; align-items: center;}
.ldl-lef{ flex: 1;}
.ldl-rig{ padding:13rpx 0 13rpx 20rpx; border-left: 1rpx solid #dcdcdc; text-align: center;}
.ldl-rig .img1{ width: 62rpx; height: 62rpx; border-radius: 50%;}
.ldb-txt{margin:5rpx 0}
.ldb-txt text{ color: var(--skin)}
.tabs{ display: flex;}
.tabs view{ flex: 1; height: 90rpx; line-height: 90rpx; text-align: center;}
.tabs view.active{ height: 86rpx; line-height: 86rpx; border-bottom: 4rpx solid var(--tab)}
.ld-footer{ width: 100%; height: 98rpx; position: fixed; left: 0; bottom:0; display: flex; background: var(--white);z-index: 2;}
.to-home,.tap-service{ flex: 1; display: flex; flex-wrap: wrap; justify-content: center;}
.to-home .img1,.tap-service .img1{ display: block; width: 60rpx; height: 60rpx;}
.to-home .v1,.tap-service .v1{ margin-top:-6rpx; width: 100%; text-align: center; font-size: 20rpx; color: #8C8C8C}
.buy-now{ width:260rpx; height: 98rpx; background: linear-gradient(to right,#FE433F,#FF8044); text-align: center; font-weight: 600; color: var(--white)}
.buy-now .v1{ margin-top:12rpx; font-size: 34rpx; font-weight: 600}
.buy-now .v2{ font-size: 22rpx}
.share-btn{ width: 200rpx; height: 70rpx; line-height: 70rpx; background: var(--skin); border-radius: 35rpx; font-size: 28rpx; color: var(--white); text-align: center;}
.can-reply {
  text-align: right;
}
.recommend{ width:260rpx; text-align: center; color: #fff; background: #d4a85f}
.recommend .v1{ margin-top:12rpx; font-size: 34rpx; font-weight: 600}
.recommend .v2{ font-size: 22rpx}
.dt-record {
  position: absolute;
  top: -42rpx;
  left: 0;
  height: 40rpx;
  line-height: 40rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  background: var(--normal);
  font-size: 22rpx;
}