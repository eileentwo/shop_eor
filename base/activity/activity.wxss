/* base/activity/activity.wxss */

.activity {
  flex-direction: column;
  padding-top: 24rpx;
  color: var(--white);
}

.activity_item {
  width: 690rpx;
  padding: 30rpx 25rpx 0;
  border-radius: 32rpx;
  background: var(--pinkL);
  box-sizing: border-box;
}

.activity_item1 {
  background: var(--blueL);
}

.activity_title {
  font-size: 34rpx;
  line-height:52rpx;
  text-align: center;      
}
.border{
  border-bottom: 1px solid #fff;
}

.item_left {
  height: 80rpx;
  width: 136rpx;
  text-indent: 14rpx;
  line-height: 80rpx;
  border-right: 1px solid #fff;
  margin-right: 40rpx;
}
.item_right {
  line-height: 40rpx;
  font-size: 26rpx;
  padding: 40rpx 0;
}
.activity_bottom {
  border-radius: 0 0 32rpx 32rpx;
  box-shadow: 0px 8rpx 27rpx 0px rgba(220, 217, 227, 0.78);
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 70rpx;
  margin-bottom: 30rpx;
  width: 616rpx;
  padding: 4rpx 20rpx 0;
  box-sizing: border-box;
}
