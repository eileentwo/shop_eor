/* pages/my/myOrder/myOrder.wxss */
page {background: #f2f2f2}
.swiper-tab {display: flex;height: 89rpx;line-height: 89rpx;text-align: center;border-bottom: 1px solid #eee;justify-content: space-around;background: #fff; font-size: 30rpx; color: var(--fontb)}
.on,.swiper-tab .active {height: 88rpx;line-height: 89rpx;border-bottom: 2rpx solid #e9472c;color: #e9472c;
font-size: 30rpx}
.olist{ margin:36rpx 0 0 0; padding:0 20rpx; box-sizing: border-box; background: #fff; }
.ol-top{ height: 80rpx; display: flex; align-items: center; border-bottom: 1rpx solid #ececec}
.ol-top .v1{ flex: 1; font-weight: 600}
.ol-cont{ margin-top:26rpx; padding-bottom: 20rpx; display: flex; border-bottom: 1rpx solid #eee;}
.olc-lef{ width: 180rpx; height: 180rpx; margin-right: 30rpx}
.olc-rig,.olc-specification view:nth-child(1){ flex: 1}
.olc-name{ margin-top:4rpx; width:480rpx; font-weight: 600; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;}
.olc-specification{ display: flex; justify-content: space-between;}
.olc-name view:nth-child(1){ width: 360rpx; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; font-size: 30rpx;}
.olc-name view:nth-child(2){ font-size: 24rpx;}
.olc-specification{ margin-top:27rpx; display: flex; font-size: 24rpx; color: #999}
.olc-price{ margin-top:46rpx; display: flex; color: var(--skin);font-size: 30rpx; font-weight: 600}
.ol-bot{ padding:15rpx 0; display: flex; align-items: center; justify-content: flex-end;}
.olist{ margin-top:20rpx;}
.black-btn,.red-btn{ padding:0 23rpx; height: 56rpx; line-height: 56rpx; border:1rpx solid #222; font-size: 26rpx; border-radius: 4rpx;}
.red-btn{ color: var(--skin); border:1rpx solid var(--skin)}
.ol-bot view:nth-child(2){ margin-left: 20rpx;}