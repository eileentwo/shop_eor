/* base/selection/selection.wxss */
@import "/zhy/template/comSearch/comSearch.wxss";

.bgw {
  height: 100vh;
}

.delete {
  width: 32rpx;
  height: 32rpx;
}

.historyTitle {
  height: 40rpx;
  font-size: 24rpx;
  color: #888;
  line-height: 40rpx;
  margin-bottom: 18rpx;
}

.historyBox {
  padding: 25rpx 30rpx;
}

.searchmain-list {
  margin-left: -16rpx;
  padding-right: 16rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.searchmain-list-item {
  margin-left: 16rpx;
  margin-bottom: 24rpx;
  white-space: nowrap;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  float: left;
  height: 54rpx;
  line-height: 54rpx;
  color: #222;
  background: #f4f4f4;
  border-radius: 26rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
}

.searchmain-list-no {
  color: #999;
  text-align: center;
  font-size: 27rpx;
  line-height: 1.414;
  width: 100%;
}
