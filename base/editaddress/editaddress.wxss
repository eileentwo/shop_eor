/* base/editaddress/editaddress.wxss */
.content {
  margin-bottom: 122rpx;
}

textarea {
  display: block;
  width: 100%;
  line-height: 1.5;
  overflow: auto;
  height: 172rpx;
  padding: 12rpx 20rpx;
  resize: none;
  box-sizing: border-box;
}

.ui-group {
  position: relative;
  background: #fff;
  margin-bottom: 24rpx;
}

.ui-list,
.ui-upload-list {
  position: relative;
  color: #444;
  padding: 30rpx 24rpx 30rpx 0;
  margin-left: 24rpx;
  border-bottom: 1px solid #eee;
  word-break: break-all;
}

.ui-title {
  position: relative;
  line-height: 50rpx;
}

.tr {
  text-align: right;
}

.location-smart-address-box {
  margin-top: 20rpx !important;
  font-size: 28rpx;
  color: #747474;
  border-radius: 16rpx;
  overflow: hidden;
  height: 172rpx;
}

.holder {
  color: #c9c9c9;
}

.location-button {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  border-radius: 20rpx;
  border: 1px solid  var(--blue);
  padding: 12rpx 22rpx 12rpx 20rpx;
  background: #fff;
  outline: 0;
  color:  var(--blue);
  line-height: 1.4;
  font-size: 28rpx;
}

.location-img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 7rpx;
}

.smart-address {
  padding: 32rpx 30rpx;
}

.smart-address-title {
  font-size: 30rpx;
  color: #444;
  margin-bottom: 26rpx;
}

.smart-address-box {
  font-size: 28rpx;
  color: #747474;
  border-radius: 16rpx;
}

.smart-address-box>textarea {
  scroll-behavior: smooth;
  min-height: 20rpx;
  border-radius: 16rpx;
  background-color: #f8f8f8;
  font-size: 28rpx;
}

.smart-address-footer {
  display: -webkit-box;
  display: flex;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-pack: end;
  justify-content: flex-end;
  margin-top: 24rpx;
  color: #747474;
}

.smart-address-footer .confirm-btn {
  width: 192rpx;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 33rpx;
  padding: 0;
  margin-left: 50rpx;
  color: #fff;
  background-color:  var(--blue);
  text-align: center;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 98rpx;
  color: #fff;
  background-color:  var(--blue);
  border-top: 1px solid #ebebeb;
  z-index: 2;
}

.footer .ui-btn {
  font-size: 36rpx;
  border-radius: 0;
  border: 0;
  padding: 0;
  line-height: 90rpx;
  color: #fff;
  background-color:  var(--blue);
}

.fixedBox {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .3);
  padding: 150rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  z-index: 99;
  text-align: center;
}

.fixedContent {
  background-color: #fff;
  width: 100%;
  border-radius: 4rpx;
}

.popup-title {
  padding: 40rpx 0;
  color: #555;
  font-size: 36rpx;
}

.popup-content {
  padding: 0 50rpx 50rpx;
  color: #444;
  text-align: left;
}

.popup-content input {
  border: 1px solid #eee;
  padding: 20rpx;
  font-size: 28rpx;
  color: #555;
}

.popup-panel {
  border-top: 1px solid #eee;
}

.popup-panel button {
  font-size: 29rpx;
  width: 50%;
  line-height: 98rpx;
  background-color: transparent;
  color: #555;
}


.popup-panel .popup-ok {
  color: #fff;
  background-color:  var(--blue);
}
.ui-right-inputbox{
  z-index: 0;
}