/* base/returnsAddGoods/returnsAddGoods.wxss */
.headerfix{
  background-color:  var(--blue);
  line-height: 88rpx;
  height: 88rpx;
  color: #fff;
}
.headbox{
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
}
.head-classify-word{
  display: block;
  text-align: center;
  line-height: 1.2;
  font-size: 20rpx;
}
.ic-head-classify{
  width: 56rpx;
  height: 44rpx;
}
.searchImg{
  width: 56rpx;
  height: 56rpx;
}
.cartImg{
  width: 56rpx;
  height: 50rpx;
  margin: 0 26rpx ;
}

.filter {
  height: 86rpx;
  line-height: 85rpx;
  background-color: #fff;
  color: #747474;
  text-align: center;
  border-bottom: 1px solid #eee;
}
.c-theme-font {
  color:  var(--blue);
}
.flex-1{
  flex: 1;
}
.mr5{
  margin-right: 5rpx;
}

.movebox {
  position: fixed;
  top: 136px;
  right: 0;
  height: auto;
  bottom: 98rpx;
  padding-bottom: 98rpx;
  min-width: 600rpx;
  background-color: #fff;
  overflow: hidden;
  transform: translateY(-9999px);
  z-index: 999;
}
.filter .icons{
  display: inline-block;
  width: 16rpx;
  height: 24rpx; 
}

.filter .icons-up{
  background-position: -60rpx 0;
}
.filter .icons-down{
  background-position: -90rpx 0;
}

.filter .ic-select{
  width: 24rpx;
  height: 24rpx;
}

.moveInContainerMid .main {
  height: 100%;
}
.product-quick-filter-title, .selcet-box .state-title {
  font-size: 32rpx;
  color: #333d44;
}
.product-class-right-head-arrow{
  width: 18rpx;
  height: 18rpx;
  border: 2px solid #ccc;
  border-width: 2px 2px 0 0 ;
  border-radius: 4rpx;
  transform: rotate(135deg) translateY(8rpx);
}
.product-class-top-head-arrow{
  transform: rotate(-45deg) translateY(8rpx);
}
.bbe, .ui-form li {
  border-bottom: 1px solid #eee;
}
.pt30 {
  padding-top: 30rpx;
}

.pb20 {
  padding-bottom: 20rpx;
}
.mlr30 {
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.ui-group {
  margin-bottom: 24rpx;
}
.ui-checklabel{
  position: relative;
  color: #555;
  padding: 30rpx 24rpx 30rpx 0;
  margin-left: 24rpx;
  border-bottom: 1px solid #eee;
  word-break: break-all;
}
.product-quick-filter-name {
  padding-left: 30rpx;
}


.footer {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fefefe;
  color: #a2a2a2;
  border-top: 1px solid #ebebeb;
  z-index: 2;
}
.footer .ui-btn {
  font-size: 36rpx;
  border-radius: 0;
  border: 0;
  padding: 0;
  line-height: 90rpx;
  -webkit-box-flex: 1;
  flex: 1;
}
.c-btn-full {
  color: #fff;
  background-color:  var(--blue);
}
