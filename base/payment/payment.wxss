/* 弹窗选择优惠券 start */
.coupon-type {
  height: 80rpx;
  padding:0 20rpx;
  margin-top: 20rpx;
  border-top: 1rpx solid #ececec;
  border-bottom: 1rpx solid #ececec;
  background: #fff;
}

.coupon-num {
  display: inline-block;
  margin: 0 10rpx;
  padding: 0 6rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
}

.coupon-box {
  position: relative;
  max-height: 760rpx;
  padding: 110rpx 20rpx 0;
  z-index: 110;
  background: #ececec;
  overflow: scroll;
}
.coupon-title {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 710rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  z-index: 111;
  background: #fff;
}
.coupon-title-close{
  transform: rotate(-45deg);
  font-size: 56rpx;
  font-weight: bold;
}
.item {
  display: flex;
  flex-direction: row;
  background: #fff;
  margin-bottom: 20rpx;
}

.item-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 194rpx;
  height: 200rpx;
  z-index: 0;
  color: #fff;
  font-size: 20rpx;
}

.item-left-price {
  position: relative;
  margin-left: -20rpx;
  font-size: 50rpx;
  font-weight: bold;
}

.item-left-price::after {
  content: '元';
  position: absolute;
  bottom: 8rpx;
  right: -24rpx;
  font-size: 20rpx;
}

.item-left image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}



.item-right-title {
  font-size: 30rpx;
  color: #282828;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.item-right-time {
  font-size: 24rpx;
  color: #888;
}

.item-right-btn {
  position: absolute;
  top: 76rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  background: #f84a5c;
  color: #fff;
  font-size: 22rpx;
  border-radius: 25rpx;
}

.fail-btn {
  background: #c6c6c6;
}
