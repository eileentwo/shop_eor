/* base/returnsGoods/returnsGoods.wxss */
.cart-list-item {
  position: relative;
  background-color: #fff;
  margin-bottom: 20rpx;
  line-height: 1.414;
}
.image {
  width: 240rpx;
  height: 240rpx;
}
.product-content {
  width: 55%;
  flex: 1;
  position: relative;
  padding-left: 30rpx;
  border-bottom: 1px solid #fafafa;
  margin-right: 30rpx;
}
.product-content .h3 {
  font-size: 30rpx;
  color: #555;
  margin: 30rpx 0 10rpx;
  height: 78rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.product-content .p {
  font-size: 24rpx;
  color: #999;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.product-price {
  font-size: 35rpx;
}
.product-list-count {
  font-size: 24rpx;
  color: #bbb;
  margin-top: 8rpx;
}
.product-list-note {
  height: auto;
  line-height: 32rpx;
  padding: 24rpx 30rpx;
  font-size: 24rpx;
  color: #bbb;
  overflow-y: auto;
  margin-top: 15rpx;
  border-top: 1px solid #eee;
}
.product-list-note .note-text {
  word-break: break-all;
  -webkit-box-flex: 1;
  flex: 1 0;
}