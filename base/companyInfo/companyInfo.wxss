/* base/companyInfo/companyInfo.wxss */
.p30rpx {
  padding: 30rpx;
}
.fb {
  font-size: 27rpx;
}
.ui-list{
  position: relative;
  color: #444;
  display: block;
  padding: 30rpx 24rpx 30rpx 0;
  margin-left: 24rpx;
  border-bottom: 1px solid #eee;
  word-break: break-all;
}
.ui-title {
  line-height: 50rpx;
  font-size: 30rpx;
}
.tr {
  text-align: right;
}
.ui-list .ui-right-inputbox.tr{
  font-size: 28rpx;
}
.ui-list .ui-right-inputbox{
  color: #222;
  flex: 1;
}
.ui-list .disable{
  color: #bbb;
}
.c3, .ui-list.c3 {
  color: #747474;
}


.mask {
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,0,.3);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9;
}
.popup-container {
  position: fixed;
  top: 150rpx;
  left: 30rpx;
  right: 30rpx;
  -webkit-animation-duration: .6s;
  animation-duration: .6s;
  background-color: #fff;
  z-index: 1001;
  border-radius: 2px;
}
.popup-title {
  padding: 40rpx 0;
  color: #555;
  text-align: center;
  font-size: 36rpx;
}
.popup-container .popup-content {
  padding: 0 50rpx 50rpx;
  box-sizing: border-box;
  color: #444;
  font-size: 32rpx;
  text-align: center;
}
.ui-txtarea {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  border: 1px solid #eee;
}
.popup-container .popup-panel {
  text-align: center;
  border-top: 1px solid #eee;
}
.popup-panel button{
  font-size: 29rpx;
  width: 50%;
  line-height: 98rpx;
  box-sizing: border-box;
  border-radius: 0;
  margin-bottom: 0;
  background-color: transparent;
}
.popup-panel .popup-ok{
  background-color: var(--blue);
  color: #fff;
}
.popup-content .ui-input {
  height: 90rpx;
  font-size: 28rpx;
  color: #555;
}