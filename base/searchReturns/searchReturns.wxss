/* base/searchReturns/searchReturns.wxss */
.content{
  min-height: 100vh;
}
.tr{
  text-align: right;
  color: #222;
}
.ui-group {
  margin-bottom: 24rpx;
}
.ui-list{
  color: #444;
  padding: 30rpx 24rpx 20rpx 0;
  margin-left: 24rpx;
  border-bottom: 1px solid #eee;
  word-break: break-all;
  box-sizing: border-box;
}
.ui-title {
  line-height: 50rpx;
  font-size: 32rpx;
}
input{
  
  color: #222;
  font-size: 28rpx;
}
.pt80rem {
  padding: 80rpx 36rpx 0 30rpx;
}
.ui-btn-big {
  width: 100%;
  padding: 32rpx 0;
  font-size: 32rpx;
  border-radius: 45rpx;
  border: 1px solid  var(--blue);
  color:  var(--blue);
  background-color: #fff;
  line-height: 1;
}
.moveMask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  background-color: rgba(0,0,0,.3);
  transform: translateY(100vh);
}
.moveMask .mask{
  height: 100vh;
}
.moveContent{
  position: absolute;
  bottom: 0;
  width: 100%;
  height:1060rpx;
  text-align: center;
  transform: translateY(100vh);
}
.moveInCon-li{
  padding: 30rpx 0;
  color: #bbb;
}