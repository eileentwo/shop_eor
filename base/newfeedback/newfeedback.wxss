/* base/newfeedback/newfeedback.wxss */

.icons {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.icons1 {
  width: 34rpx;
  height: 34rpx;
  transform: rotate(45deg);
  margin-right: -10rpx;
}

.ui-group {
  background: #fff;
  margin-bottom: 24rpx;
  position: relative;
}

#feedbackCont {
  font-size: 28rpx;
  border: none;
  color: #555;
  display: block;
  width: 100%;
  height: 430rpx;
  line-height: 1.5;
  overflow: auto;
  padding: 20rpx 20px 12rpx;
  margin-top: 20rpx;
  resize: none;
}

.bbe, .ui-form li {
  border-bottom: 1px solid #eee;
}

.ui-upload {
  color: #444;
}

.webuploader-pick {
  padding: 30rpx 0;
  border-right: 30rpx solid transparent;
  border-left: 30rpx solid transparent;
  word-break: break-all;
  line-height: 50rpx;
  font-size: 30rpx;
}

.product-class-right-head-arrow {
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border: 2px solid #ccc;
  border-width: 2px 2px 0 0;
  border-radius: 4rpx;
  transform: rotate(45deg) translateY(2rpx);
}

.ui-upload-list {
  position: relative;
  color: #555;
  padding: 30rpx 10rpx 30rpx 0;
  margin-left: 24rpx;
  font-size: 30rpx;
  word-break: break-all;
  line-height: 50rpx;
  border-bottom: 1px solid #eee;
}
